extends layout_admin

block content
  div(class="bs-component")
    div(class="navbar navbar-default")
      div(class="navbar-inner")
        a(class="brand" href="#">Имя проекта)
        ul(class="nav navbar-nav")
          li
            a(href="#{homepage}") Выход на главную
          li
            a(href="#{homepage}/admin") О компании
          li(class="dropdown")
            a(id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown") Жалюзи
              b(class="caret")
            ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
              li
                a(tabindex="-1" href="#{homepage}/admin/zhaluzi-types") Типы жалюзи
              li
                a(tabindex="-1" href="#{homepage}/admin/zhaluzi-positions") Виды жалюзи
          li(class="dropdown")
            a(id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown") Рольставни
              b(class="caret")
            ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
              li
                a(tabindex="-1" href="#{homepage}/admin/rollers-types") Типы рольставен
              li
                a(tabindex="-1" href="#{homepage}/admin/rollers-positions") Виды рольставен
          li(class="active")
            a(href="#{homepage}/admin/images") Изображения
          li
            a(href="#{homepage}/admin/orders") Заявки
          li
            a(href="#{homepage}/logout") Выход 

  div.tabbable
    ul(class="nav nav-tabs")
      li(class="active")
        a(href="#tab1" data-toggle="tab") Типы жалюзи
      li
        a(href="#tab2" data-toggle="tab") Типы рольставен
      li
        a(href="#tab3" data-toggle="tab") Виды жалюзи
      li
        a(href="#tab4" data-toggle="tab") Виды рольставен
    div.tab-content
      div(class="tab-pane active" id="tab1")
          div
            table(class="table table-striped table-bordered table-condensed")
              tbody
                each lt, i in ltlist
                  tr
                    td
                      p=lt.name
                    td
                      a(href="#{homepage}/images/catalog/img_lt#{lt._id}.jpg" class="thumbnail" target="_blank" style="width:200px; height:130px; margin: 0 auto")
                        image(src='#{homepage}/images/catalog/img_lt#{lt._id}.jpg' style="width:200px; height:120px; margin: 0 auto")
                    td  
                      form.form-horizontal(action="/admin/upload_img_lt#{lt._id}" enctype="multipart/form-data" method="post")
                        input(type="file" name="upload" multiple="multiple")
                        input(type="submit" value="Загрузить")
      div(class="tab-pane" id="tab2")
          div
            table(class="table table-striped table-bordered table-condensed")
              tbody
                each rt, i in rtlist
                  tr
                    td 
                      p=rt.name
                    td
                      a(href="#{homepage}/images/catalog/img_rt#{rt._id}.jpg" class="thumbnail" target="_blank" style="width:200px; height:130px; margin: 0 auto")
                        image(src='#{homepage}/images/catalog/img_rt#{rt._id}.jpg' style="width:200px; height:120px; margin: 0 auto")
                    td  
                      form.form-horizontal(action="/admin/upload_img_rt#{rt._id}" enctype="multipart/form-data" method="post")
                        input(type="file" name="upload" multiple="multiple")
                        input(type="submit" value="Загрузить")
      div(class="tab-pane" id="tab3")
          div
          table(class="table table-striped table-bordered table-condensed")
            tbody
              each louver, i in louverslist
                tr
                  td 
                    p=louver.name
                  td
                    a(href="#{homepage}/images/catalog/img_l#{louver._id}_1.jpg" class="thumbnail" target="_blank" style="width:200px; height:130px; margin: 0 auto")
                      image(src='#{homepage}/images/catalog/img_l#{louver._id}_1.jpg' style="width:200px; height:120px; margin: 0 auto")
                    form.form-inline(action="/admin/upload_img_l#{louver._id}_1" enctype="multipart/form-data" method="post")
                      input(type="file" name="upload" multiple="multiple")
                      input(type="submit" value="Загрузить")  
                  td
                    a(href="#{homepage}/images/catalog/img_l#{louver._id}_2.jpg" class="thumbnail" target="_blank" style="width:200px; height:130px; margin: 0 auto")
                      image(src='#{homepage}/images/catalog/img_l#{louver._id}_2.jpg' style="width:200px; height:120px; margin: 0 auto")
                    form.form-inline(action="/admin/upload_img_l#{louver._id}_2" enctype="multipart/form-data" method="post")
                      input(type="file" name="upload" multiple="multiple")
                      input(type="submit" value="Загрузить")
                  td
                    a(href="#{homepage}/images/catalog/img_l#{louver._id}_3.jpg" class="thumbnail" target="_blank" style="width:200px; height:130px; margin: 0 auto")
                      image(src='#{homepage}/images/catalog/img_l#{louver._id}_3.jpg' style="width:200px; height:120px; margin: 0 auto")
                    form.form-inline(action="/admin/upload_img_l#{louver._id}_3" enctype="multipart/form-data" method="post")
                      input(type="file" name="upload" multiple="multiple")
                      input(type="submit" value="Загрузить")
      div(class="tab-pane" id="tab4")
          div
            table(class="table table-striped table-bordered table-condensed")
              tbody
                each roller, i in rollerslist
                  tr
                    td 
                      p=roller.name
                    td
                      a(href="#{homepage}/images/catalog/img_r#{roller._id}.jpg" class="thumbnail" target="_blank" style="width:120px; height:130px; margin: 0 auto")
                        image(src='#{homepage}/images/catalog/img_r#{roller._id}.jpg' style="width:120px; height:120px; margin: 0 auto")
                    td  
                      form.form-horizontal(action="/admin/upload_img_r#{roller._id}" enctype="multipart/form-data" method="post")
                        input(type="file" name="upload" multiple="multiple")
                        input(type="submit" value="Загрузить")

