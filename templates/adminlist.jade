extends layout_admin

block content
    script(src='#{homepage}/js/myJS_adminlist.js')
    script.
      document.getElementById('alst').className+=" active"
    table(class="table table-striped table-bordered table-condensed")
      tbody
        tr
          td Имя учетной записи
          td
          td 
        each name,i in namelist
          tr
            td=name.login
            td
              a(href="#" id="delete_#{name.login}" class="delete_login") удалить
            td
              a(href="#" role="button" id="edit_#{name.login}" class="edit_login") изменить пароль
    a(href="#AddAdmin" role="button" id="AddAdmin2" class="AddAdmin2" data-toggle="modal") Добавить новую учетную запись
    div(class="modal" id="AddAdmin" tabindex="-1" role="dialog" aria-labelledby="AddAdminLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="AddAdmLabel") Добавление учетной записи
          div(class="modal-body")
            label Логин:
            br
            input(type="text" name="username" id="input_username" placeholder="login" size="70")
            br
            label Пароль:
            br
            input(type="password" name="password" id="input_password" placeholder="password" size="70")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='AddAd' href="#" type="submit") Отправить
    div(class="modal" id="EditAdmin" tabindex="-1" role="dialog" aria-labelledby="EditAdminLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="EditAdmLabel") Изменение учетной записи
          div(class="modal-body")
            label Старый пароль:
            br
            input(type="password" name="oldpas" id="oldpas" placeholder="old password" size="70")
            br
            label Новый пароль:
            br
            input(type="password" name="newpassword1" id="newpassword1" placeholder="new password" size="70")
            br
            label Повторите новый пароль:
            br
            input(type="password" name="newpassword2" id="newpassword2" placeholder="new password" size="70")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='EdAd' href="#" type="submit") Отправить