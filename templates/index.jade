extends layout

block content
    script(src='#{homepage}/js/myJS.js')
    script.
      document.getElementById('gl').className+=" active";
    div(id="myCarousel" class="carousel slide" data-ride="carousel" style="width:800px; height:300px; margin: 0 auto")
      div(class="carousel-inner")
        div(class="active item") 
          img(src='#{homepage}/images/window3.jpg' alt="" style="width:800px; height:300px; margin: 0 auto")
        div(class="item") 
          img(src='#{homepage}/images/window1.jpg' alt="" style="width:800px; height:300px; margin: 0 auto")
        div(class="item")
          img(src='#{homepage}/images/window2.jpg' alt="" style="width:800px; height:300px; margin: 0 auto")
      a(class="carousel-control left" href="#myCarousel" data-slide="prev") &lsaquo;
      a(class="carousel-control right" href="#myCarousel" data-slide="next") &rsaquo;
    br

    div(align="center")
      button.btn Калькулятор жалюзи
      button.btn Калькулятор рольставен
      button(href="#myModal" role="button" class="btn" data-toggle="modal") Вызов замерщика

    div(class="bs-component")
      div(class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
        div(class="modal-dialog")
          div(class="modal-content")
            div(class="modal-header")
              button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
              h3(id="myModalLabel") Вызов замерщика
            div(class="modal-body")
              label ФИО
              br
              input(id="contact_name" style="width: 377px;" type="text" name="contact_name" value="" size="70")
              br
              label E-mail
              br
              input(id="contact_mail" style="width: 377px;" type="text" name="contact_mail" value="" size="70")
              br
              label Телефон
              br
              input(id="contact_phone" style="width: 377px;" type="text" name="contact_phone" value="" size="70")
              br
              label Полный адрес
              br
              input(id="contact_address" style="width: 377px;" type="text" name="contact_address" value="" size="70")
              br
              label Комментарий
              br
              textarea(id="contact_message" style="width: 377px;" name="contact_message" rows="7" cols="86")
            div(class="modal-footer")
              button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
              button(class="btn btn-primary" id='newOrder' href="#{homepage}/newOrder/") Отправить

