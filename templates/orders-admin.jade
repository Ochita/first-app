extends layout_admin

block content
    script(src='#{homepage}/js/myJS_orderlist.js')
    script.
      document.getElementById('ord').className+=" active"                
    div
      table(class="table table-striped table-bordered table-condensed")
        tbody
          tr
            td Время и дата
            td ФИО
            td E-mail
            td Телефон
            td Адрес
            td Комментарий
            td
          each order, i in orderlist
            tr
              td=order.order_data
              td=order.name
              td=order.mail
              td=order.phone
              td=order.address
              td!=order.comment
              td
                a(href="#" id="delete_#{order._id}" class="delete_order") удалить