extends layout_admin

block content
    script(src='#{homepage}/js/myJS_louvers_type_list.js')
    div(class="navbar navbar-default")
      div(class="navbar-inner")
        a(class="brand" href="#">Имя проекта)
        ul(class="nav navbar-nav")
          li
            a(href="#{homepage}") Выход на главную
          li
            a(href="#") О компании
          li(class="dropdown active")
            a(id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown") Жалюзи
              b(class="caret")
            ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
              li
                a(tabindex="-1" href="#{homepage}/admin/zhaluzi-types") Типы жалюзи
              li
                a(tabindex="-1" href="#{homepage}/admin/zhaluzi-positions") Виды жалюзи
          li(class="dropdown")
            a(id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown") Рольставни
              b(class="caret")
            ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
              li
                a(tabindex="-1" href="#{homepage}/admin/rollers-types") Типы рольставней
              li
                a(tabindex="-1" href="#{homepage}/admin/rollers-positions") Виды рольставней
          li
            a(href="#{homepage}/admin/orders") Заявки
          li
            a(href="#") Контакты            
    ul
      each louver, i in louverslist
        li
          p=("ID: "+louver._id)
          p=("Название: "+louver.name)
          p=("Адрес: "+louver.adress)
          a(href="#" id="delete_#{louver._id}" class="delete_louvers_type") удалить тип
          br
          a(href="#" role="button" id="edit_#{louver._id}" class="edit_louvers_type" data-toggle="modal") редактировать тип
          p   

    a(href="#AddLouver" role="button" id="AddLouverType" class="AddLouver" data-toggle="modal") Добавить новый тип
    div(class="modal" id="AddLouver" tabindex="-1" role="dialog" aria-labelledby="AddLouverLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="AddLouverLabel") Добавление типа
          div(class="modal-body")
            label Название типа:
            br
            input(id="namen" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            //label Изображение
            //br
            //input(id="imagen" style="width: 377px;" type="file" name="image" value="" size="70")
            //br
            label Описание:
            br
            textarea(id="descriptionn" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='AddLType' href="#" type="submit") Отправить
    //окно редактирования          
    div(class="modal" id="EditLouver" tabindex="-1" role="dialog" aria-labelledby="EditLouverLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="EditLouverLabel") Редактирование типа
          div(class="modal-body")
            label Название типа:
            br
            input(id="name" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            //label Изображение
            //br
            //input(id="image" style="width: 377px;" type="file" name="image" value="" size="70")
            //br
            label Описание:
            br
            textarea(id="description" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='EditLType' href="#" type="submit") Отправить