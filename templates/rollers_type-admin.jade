extends layout_admin

block content
    script(src='#{homepage}/js/myJS_rollers_type_list.js')
    script.
      document.getElementById('rr').className+=" active"
    div
      table(class="table table-striped table-bordered table-condensed")
        tbody
          tr
            td Название
            td Адрес
            td
            td
          each roller, i in rollerslist
            tr
              td=roller.name
              td=roller.adress
              td
                a(href="#" id="delete_#{roller._id}" class="delete_rollers_type") удалить
              td
                a(href="#EditRoller" role="button" id="edit_#{roller._id}" class="edit_rollers_type" data-toggle="modal") редактировать    

    a(href="#AddRoller" role="button" id="AddRollerType" class="AddRoller" data-toggle="modal") Добавить новый тип
    div(class="modal" id="AddRoller" tabindex="-1" role="dialog" aria-labelledby="AddRollerLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="AddRollerLabel") Добавление типа
          div(class="modal-body")
            label Название типа:
            br
            input(id="namen" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Описание:
            br
            textarea(id="descriptionn" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='AddRType' href="#" type="") Отправить
    //окно редактирования          
    div(class="modal" id="EditRoller" tabindex="-1" role="dialog" aria-labelledby="EditRollerLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="EditRollerLabel") Редактирование типа
          div(class="modal-body")
            label Название типа:
            br
            input(id="name" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Описание:
            br
            textarea(id="description" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='EditRType' href="#" type="") Отправить