extends layout_admin

block content
    script(src='#{homepage}/js/myJS_louvers_list.js')
    script.
      document.getElementById('ll').className+=" active"
    div
      table(class="table table-striped table-bordered table-condensed")
        tbody
          tr
            td Название
            td Тип
            td Цена (калькулятор)
            td Цена (промо)
            td
            td
          each louver, i in llist
            tr 
              td=louver.name
              td=louver.type
              td=louver.calc_price
              td=louver.promo_price
              td
                a(href="#" id="delete_#{louver._id}" class="delete_louvers") удалить
              td
                a(href="#" role="button" id="edit_#{louver._id}" class="edit_louvers" data-toggle="modal") редактировать

    a(href="#AddLouver" role="button" id="AddLouverType" class="AddLouver" data-toggle="modal") Добавить новый вид
    div(class="modal" id="AddLouver" tabindex="-1" role="dialog" aria-labelledby="AddLouverLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="AddLouverLabel") Добавление вида
          div(class="modal-body")
            label Название вида:
            br
            input(id="namen" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Цена(калькулятор):
            br
            input(id="cpricen" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Цена(промо):
            br
            input(id="ppricen" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Тип жалюзи:
            br
            select(name="types" style="width : 377px" id="typen")
              each louver, i in louverslist
                option(value=i)=louver.name
            br
            br
            label Описание:
            br
            textarea(id="descriptionn" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='AddL' href="#" type="") Отправить
    //окно редактирования          
    div(class="modal" id="EditLouver" tabindex="-1" role="dialog" aria-labelledby="EditLouverLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
            h3(id="EditLouverLabel") Редактирование вида
          div(class="modal-body")
            label Название вида:
            br
            input(id="name" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Цена(калькулятор):
            br
            input(id="cprice" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Цена(промо):
            br
            input(id="pprice" style="width: 377px;" type="text" name="name" value="" size="70")
            br
            label Тип жалюзи:
            br
            select(name="types" style="width : 377px" id="type")
              each louver, i in louverslist
                option(value=i)=louver.name
            br
            br
            label Описание:
            br
            textarea(id="description" style="width: 377px;" name="description" rows="7" cols="86")
          div(class="modal-footer")
            button(class="btn" data-dismiss="modal" aria-hidden="true") Отменить
            button(class="btn btn-primary" id='EditL' href="#" type="") Отправить